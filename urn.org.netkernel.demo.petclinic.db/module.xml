<module version="2.0">
    <meta>
        <identity>
            <uri>urn:org:netkernel:demo:petclinic:db</uri>
            <version>0.0.1</version>
        </identity>
        <info>
            <name>Demo / PetClinic / DB</name>
            <description>DB module of PetClinic in ROC</description>
        </info>
    </meta>
    <system>
        <dynamic/>
        <classloader>
            <exports>
                <match>org\.postgresql\..*</match>
            </exports>
        </classloader>
    </system>
    <rootspace>
        <mapper>
            <config>
                <import>res:/org/netkernel/demo/petclinic/db/dbMapperConfig.xml</import>
            </config>
            <space>
                <fileset>
                    <regex>res:/org/netkernel/demo/petclinic/.*</regex>
                </fileset>
                <fileset>
                    <regex>res:/etc/.*</regex>
                </fileset>
                <fileset>
                    <regex>res:/resources/.*</regex>
                </fileset>
                <fileset>
                    <regex>res:/scripts/.*</regex>
                </fileset>
                <import>
                    <uri>urn:org:netkernel:mod:db</uri>
                </import>
                <import>
                    <uri>urn:org:netkernel:lang:groovy</uri>
                </import>
                <import>
                    <uri>urn:org:netkernel:lang:dpml</uri>
                </import>
            </space>
        </mapper>
    </rootspace>
</module>