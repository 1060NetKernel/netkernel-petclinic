{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Owner",
  "description": "A pet owner visiting PetClinic",
  "type": "object",
  "required": ["firstName", "lastName", "address"],
  "properties": {
    "id": {
      "type": "integer"
    },
    "address": {
      "type": "string"
    },
    "city":  {
      "type": "string"
    },
    "firstName": {
      "type": "string"
    },
    "lastName": {
      "type": "string"
    },
    "telephone": {
      "type": "string"
    },
    "pets": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "birthDate": {
            "format": "date-time",
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "owner": {
            "type": "integer"
          },
          "type": {
            "type": "object",
            "properties": {
              "id": {
                "type": "integer"
              },
              "name": {
                "type": "string"
              }
            }
          },
          "visits": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "date": {
                  "format": "date-time",
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "id": {
                  "type": "integer"
                },
                "pet": {
                  "type": "integer"
                }
              }
            }
          }
        }
      }
    }
  }
}